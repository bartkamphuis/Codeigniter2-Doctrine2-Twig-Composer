{% extends app.input.is_ajax_request ? "template_ajax.html.twig":"template.html.twig" %}
{% block body %}
<h1>{% block title %}list_user{% endblock %}</h1>
<table>
    <thead>
        <tr>
            <th>name</th>
            <th>last_name</th>
            <th>date_born</th>
            <th>phone</th>
            <th>phone_mobile</th>
            <th>email</th>
            <th>address</th>
            <th>code</th>
            <th>password</th>
            <th>actions</th>
        </tr>
    </thead>    
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.name }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.dateBorn | date('Y-m-d') }}</td>
            <td>{{ user.phone }}</td>
            <td>{{ user.phoneMobile }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.address }}</td>
            <td>{{ user.code }}</td>
            <td>{{ user.password }}</td>
            <td>
                {{ anchor('user/show/'~user.id,'show')}}
                {{ anchor('user/edit/'~user.id,'edit')}}
                {{ anchor('user/delete/'~user.id,'delete')}}
                </td>
        </tr>
        {% endfor %}
    </tbody>
</table> 
{% endblock body %}